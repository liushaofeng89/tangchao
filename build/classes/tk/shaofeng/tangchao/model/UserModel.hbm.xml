<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="tk.shaofeng.tangchao.model.UserModel" table="userinfo">
        <id name="userId" column="UserID" type="java.lang.Integer">
        	<generator class="increment"></generator>
        </id>
        <property name="cardId" column="CardID" type="java.lang.Long"></property>
        <property name="userName" column="UserName" type="java.lang.String"></property>
        <property name="isMale" column="Sex" type="java.lang.Boolean"></property>
        <property name="createDate" column="CreateTime" type="java.util.Date"></property>
        <property name="discount" column="Discounts" type="java.lang.Float"></property>
    </class>
</hibernate-mapping>
