<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="tk.shaofeng.tangchao.model.RechargeModel" table="rechargeinfo">
        <id name="id" column="ID" type="java.lang.Integer">
        	<generator class="increment"></generator>
        </id>
        <property name="cardId" column="CardID" type="java.lang.Integer"></property>
        <property name="rechargeAmount" column="RechargeAmount" type="java.lang.Double"></property>
        <property name="remain" column="Remain" type="java.lang.Double"></property>
        <property name="rechageDate" column="RechargeTime" type="java.util.Date"></property>
    </class>
</hibernate-mapping>
